{
  "metadata": [
    {
      "src": [
        {
          "files": [ "*.sln", "**/*.sln", "src/**.cs" ],
          "exclude": [ "**/bin/**", "**/obj/**" ],
         // "src": "../src",
          "cwd": "../"
        }
      ],
      "dest": "obj/api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [ "**/*.yml" ],
        "src": "obj/api",
        "dest": "api"
      },
      {
        "files": [ "articles/**/*.md", "*.md", "toc.yml" ]
      }
    ],
    "resource": [
      {
        "files": [ "articles/images/**"]
      }
    ],
    "globalMetadata": {
      "_appTitle": "DotNetHelper-Contracts",
      "_enableSearch": true
    },
    "markdownEngineName": "markdig",
    "dest": "_site",
    "xrefService": [ "https://xref.docs.microsoft.com/query?uid={uid}" ]
  }
}
