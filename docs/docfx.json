{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "src/**.cs"
          ],
          "exclude": [ "**/bin/**", "**/obj/**" ],
          "src": "src",
          "cwd": "../"
        }
      ],
      "properties": {
        "TargetFramework": "net452"
      },
      "dest": "obj/api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [ "**/*.yml" ],
        "src": "obj/api",
        "dest": "api"
      },
      {
        "files": [ "articles/**/*.md", "*.md", "toc.yml", "restapi/**" ]
      }
    ],
    "resource": [
      {
        "files": [ "articles/images/**"]
      }
    ],
    "overwrite": "specs/*.md",
    "globalMetadata": {
      "_appTitle": ".NET-Helper Contracts website",
      "_enableSearch": true
    },
    "markdownEngineName": "markdig",
    "dest": "",
    "xrefService": [ "https://xref.docs.microsoft.com/query?uid={uid}" ]
  }
}
